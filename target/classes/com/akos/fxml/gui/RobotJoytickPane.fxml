<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import com.akos.gui.controllers.right_panel.Knob?>
<TitledPane fx:id="robotJoysickPaneView" text="Sphero robot status" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.akos.gui.controllers.right_panel.RobotJoyStickPaneController">
    <content>
        <VBox fx:id="rightPaneTabBody">
         <children>
             <ToggleSwitch alignment="CENTER" contentDisplay="CENTER" nodeOrientation="LEFT_TO_RIGHT" text="asd">
                 <VBox.margin>
                     <Insets left="5.0" right="5.0" />
                 </VBox.margin>
             </ToggleSwitch>
            <Pane fx:id="joystickMovePane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: lightgrey;">
               <children>
                  <Knob fx:id="joystickKnob" fill="DODGERBLUE" layoutX="100.0" layoutY="100.0" radius="35.0" stroke="BLACK" strokeType="INSIDE" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Pane>
         </children></VBox>
    </content>
</TitledPane>
