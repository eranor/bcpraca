<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TitledPane fx:id="robotStatusPaneView" text="Sphero robot status" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.akos.gui.controllers.right_panel.RobotStatusPaneController">
    <content>
        <VBox fx:id="rightPaneTabBody">
            <children>
                <AnchorPane>
                    <children>
                        <GridPane hgap="20.0" layoutX="28.6" layoutY="29.6" vgap="10.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0"
                                  AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="-Infinity" prefHeight="30.0"/>
                                <RowConstraints maxHeight="-Infinity" prefHeight="30.0"/>
                                <RowConstraints maxHeight="-Infinity" prefHeight="30.0"/>
                            </rowConstraints>
                            <children>
                                <Label text="Name:"/>
                                <Label text="Address:" GridPane.rowIndex="1"/>
                                <Label text="Connection address:" GridPane.rowIndex="2"/>
                                <Label fx:id="robotNameLabel" GridPane.columnIndex="1"/>
                                <Label fx:id="robotAddressLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label fx:id="robotConnectionAddressLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
                <Separator/>
                <AnchorPane>
                    <children>
                        <VBox alignment="CENTER" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0">
                            <children>
                                <Label text="Select program to run:"/>
                                <ChoiceBox fx:id="currentProgramsChoiceBox"/>
                                <HBox alignment="CENTER" spacing="20.0">
                                    <children>
                                        <Button fx:id="robotSendCurrentProgram" mnemonicParsing="false" onAction="#sendCurrentProgram" text="Send"/>
                                        <Button mnemonicParsing="false" onAction="#abortCurrentProgram" text="Abort"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </VBox>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </content>
</TitledPane>
